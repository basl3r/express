<link rel="stylesheet" href="../public/styles.css">

<h2>Contact</h2>

{{#if isSent}}
  <div class="isSent">
    <p>The message has been sent!</p>
    <p>File {{ project }} has been saved</p>
  </div>
{{/if}}

{{#if isError}}
  <div class="isError">
    <p>All fields must be filled!</p>
  </div>
{{/if}}

<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <label>
    Project design: <input type="file" name="project" accept=".png, .jpg, .jpeg, .gif" required>
  </label>
  <button type="submit">Send message</button>
</form>
